<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400|Lato:300,400,900' %>
  <%= stylesheet_link_tag    "application", media: "all", 
  "data-turbolinks-track" => true %>  
  <%= javascript_include_tag "application", 
  "data-turbolinks-track" => true %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" %>
  <%= favicon_link_tag 'http://hippoartists.com.s3.amazonaws.com/images/icons/main/hicon-2.png' %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %> 
</head>

<body>
  <div class="container_12">
    <%= render 'layouts/header' %>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <%= yield %>
  </div>
</body>

</html>


