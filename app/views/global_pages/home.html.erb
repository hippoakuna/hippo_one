<header id="production-area">
<div class="container_12">
  <section class="wrapper">
    <%= image_tag "http://hippoartists.com.s3.amazonaws.com/images/main/cds/akuna/akna.png", class: "EP" %>
    <span>
      <h2>Debut EP coming soon on Hippo</h2>
      <small>Akuna is an indie artist based in the Joplin, Missouri area.</small>
      <br><br><a href="https://www.facebook.com/hippoartists" target="_blank"><button>Follow</button></a>
    </span>
    <section class="right-box">
      <span>
        <h2>Dot</h2>
        <small><a href="http://vimeo.com/garrettkennell" target="_blank">Watch Teaser</a></small>
        <br><br>
        <a href="dot">
          <button>Feature Page</button>
        </a>
      </span>
      <a href='#demo_inline_element' class='lightview'
        data-lightview-options="skin: 'dark', controls: { type: 'relative', slider: false, close: 'false' }">
        <%= image_tag "http://hippoartists.com.s3.amazonaws.com/images/main/etc/dotvid.jpg" %>
      </a>
    </section>
  </section>
</div><div class='clear'>&nbsp;</div>
</header>


<div id='demo_inline_element' style='display:none'>
  <div class='movie-container side'>
    <iframe src="//player.vimeo.com/video/70665749" width="100%" height="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
  </div>
</div>

