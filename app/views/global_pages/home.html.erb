..................................................................-->

<header id="feature-area">
  <%= link_to image_tag("http://hippoartists.com.s3.amazonaws.com/images/main/banners/wide.jpg", class: "main-feature"), melikebees_path %>
  <%= link_to image_tag("http://hippoartists.com.s3.amazonaws.com/images/main/banners/mlb-circle.png", class: "name"), melikebees_path %>
</header>


